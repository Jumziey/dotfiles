#!/usr/bin/env bash
SCRIPT_ROOT=$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)

i3-msg "workspace 6; append_layout $SCRIPT_ROOT/layouts/communications.json"
i3-msg 'workspace 6; exec discord'
i3-msg 'workspace 6; exec slack'
i3-msg 'workspace 6; exec firefox --new-window https://www.gmail.com'
sleep 1


i3-msg "workspace 4; append_layout $SCRIPT_ROOT/layouts/calendar-bitwarden.json"
i3-msg 'workspace 4; exec bitwarden'
i3-msg 'workspace 4; exec chromium calendar.google.com'

i3-msg "workspace 2; append_layout $SCRIPT_ROOT/layouts/support.json"
i3-msg 'workspace 2; exec firefox --new-window https://www.gitlab.com'

i3-msg "workspace 1"


